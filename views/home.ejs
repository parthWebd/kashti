
        
<h1>Kashti , the social media app</h1>
<section id="feed-post">
        <h4>Posts</h4>
        <form action="/posts/post_form" id="new-post-form"  method="POST">
                <textarea name="content" id="" cols="30" rows="3" placeholder="type here..."></textarea>
                <input type="submit" value="Post">
        </form>
</section>

<ol>
        <p>My Post</p>
        <%if(locals.user){%>
        <% for(let i of post) { %>
                <li><%= i.content %></li>
                <small>
                        <%= i.user.name %>
                </small>
                <div class="post-comments-list">
                        <ul id="post-comments-<%= post.id %>">
                                <% if(i.comments){ %>
                                        <% for(comment of i.comments) {%>
                                                <li><%= comment.content %></li>
                                                <small>
                                                        <%= comment.user.name %>
                                                </small>
                                        <% } %>
                                <% } %>
                        </ul>
                </div>
                <div class="post-comment">
                        <form action="/comments/create" method="POST">
                                <input type="text" name="content" placeholder="add comment..." required>
                                <input type="hidden" name="post" value="<%= i._id %>">
                                <button type="submit">add comment</button>
                        </form>

                        
                </div>

        <% } %>
        <%}%>
</ol>


       